{
    "manifest_version": 3,
    "name": "WeatherMate",
    "version": "1.1.2",
    "description": "Display your local city's weather according to OpenWeather's API",
    "author": "Carson Lam",
    "action": {
        "default_popup": "index.html",
        "default_title": "WeatherMate"
    },
    "icons": {
        "64": "icon64.png",
        "128": "icon128.png"
    },
    "permissions": [
        "geolocation"
    ]
}